{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "GEVENT_SUPPORT": "True"
            },
            "justMyCode": false
        },
    {
        "name": "Run locust",
        "type": "debugpy",
        "request": "launch",
        "module": "locust",
        "args": [
            "--worker"
        ],
        "console": "integratedTerminal",
        "gevent": true,
        "justMyCode": false
    }]
}